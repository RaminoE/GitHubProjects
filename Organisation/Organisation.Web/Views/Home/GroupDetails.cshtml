<script type="text/javascript">
    function GetDetailsTeam(name, type) {
        alert("2")
        debugger
        $.ajax({
            url: '/Home/Details',
            type: "POST",
            data: {
                selected: type,
                groupname: name
            },
            success: function (value) {
                if (type == 2) {
                    $("#mem").show();
                    $("#det").hide();
                    $("#mem").html(value);

                }
                else {
                    alert("1")
                    $("#div1").html(value);
                    $("#mem").hide();
                    $("#det").show();
                }

            }
        });



    }

</script>

