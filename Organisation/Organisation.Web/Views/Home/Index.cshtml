<script type="text/javascript">
    function Filter(data) {

        var text = $("#search").val();
        if (data == 1) {
            $("#search").keypress(function (e) {

                if (e.which == 13) {

                    i = true
                    $.ajax({
                        url: '/Home/Filter',
                        type: "POST",
                        data: {
                            search: text,

                        },
                        success: function (value) {

                            $("#indexdiv").html(value);
                        }
                    });
                }
            });
        }
        else if (data == 2) {

            $.ajax({
                url: '/Home/Filter',
                type: "POST",
                data: {
                    search: text,

                },
                success: function (value) {

                    $("#indexdiv").html(value);
                }
            });
        }
    }

    

   
  

</script>
